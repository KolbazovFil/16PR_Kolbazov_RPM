<Window x:Class="_16PR_Kolbazov_RPM.CaesarCipher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16PR_Kolbazov_RPM"
        mc:Ignorable="d"
        Title="CaesarCipher" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите текст:" FontSize="14" Margin="5,0,0,0"/>
            <TextBox Name="InputTextBox" Height="30" FontSize="14" TextChanged="InputTextBox_TextChanged" Language="ru-ru"/>

            <TextBlock Text="Зашифрованный текст:" FontSize="14" Margin="5,0,0,0"/>
            <TextBox Name="OutputTextBox" Height="30" FontSize="14" IsReadOnly="True" Language="ru-ru"/>

            <TextBlock Text="Сдвиг:" FontSize="14" Margin="5,0,0,0"/>
            <TextBox Name="ShiftTextBox" Height="30" FontSize="14" TextChanged="ShiftTextBox_TextChanged" Language="ru-ru"/>
        </StackPanel>
    </Grid>
</Window>
